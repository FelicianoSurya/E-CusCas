<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBF9EA">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/welcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Letâ€™s make an account "
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="94dp" />

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="410dp"
            android:layout_height="588dp"
            android:background="@drawable/rounded_layout"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="2.0"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Full Name"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Username"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/etUsername"
                tools:layout_editor_absoluteX="19dp" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="173dp" />

            <EditText
                android:id="@+id/etPassword3"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Address"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="380dp" />

            <EditText
                android:id="@+id/etPassword4"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Email"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="313dp" />

            <EditText
                android:id="@+id/etPassword5"
                android:layout_width="286dp"
                android:layout_height="68dp"
                android:ems="10"
                android:fontFamily="@font/nunito_extrabold"
                android:hint="Phone"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="241dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="51dp"
                android:backgroundTint="#FFCD36"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Register"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints,UnknownId"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="468dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Have an account?"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/btnLogin"
                app:layout_constraintStart_toStartOf="@+id/btnLogin"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login here"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>